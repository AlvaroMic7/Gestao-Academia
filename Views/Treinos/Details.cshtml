@model SistemaAcademia.Models.Treino

@{
    ViewData["Title"] = "Montar Treino";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="display-6">@Model.Nome</h1>
        <p class="text-muted">@Model.Observacoes</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
</div>

