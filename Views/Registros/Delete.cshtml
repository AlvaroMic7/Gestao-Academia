@model SistemaAcademia.Models.RegistroTreino

@{
    ViewData["Title"] = "Excluir Registro";
}

<h1>Excluir Registro</h1>
<h3>Tem certeza que quer apagar este treino do histórico?</h3>
<div>
    <h4>Treino: @Model.Treino.Nome</h4>
    <h5>Data: @Model.DataTreino.ToString("dd/MM/yyyy")</h5>
    <hr />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim, Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para o Histórico</a>
    </form>
</div>